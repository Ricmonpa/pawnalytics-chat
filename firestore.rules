rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla simplificada para desarrollo - permitir todo para usuarios autenticados
    // Esto evita conflictos entre reglas espec√≠ficas y la regla general
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 